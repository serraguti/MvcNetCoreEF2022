@model IEnumerable<MvcNetCoreEF2022.Models.Doctor>

@{
    ViewData["Title"] = "DoctoresSalario";
}

<h1>Doctores Salario</h1>
<form method="post">
    <label>Introduzca salario: </label>
    <input type="text" name="salario" class="form-control" required/>
    <button type="submit" class="btn btn-info">
        Buscar Doctores
    </button>
</form>
<h1 style="color:red">
    @ViewData["MENSAJE"]
</h1>

@if (Model != null)
            {
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDoctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHospital)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDoctor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdHospital)
                </td>
            </tr>
        }
    </tbody>
</table>
            }


